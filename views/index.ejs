<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <title>Hello, world!</title>
  </head>
  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Restaurante Jaimes</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/detalle">Detaller</a>
              </li>
              
          </div>
        </div>
      </nav>
    
      <div class="container">
          <a href="/crear" class="btn btn-outline-primary mt-4"><i class='bx bx-add-to-queue bx-md'></i></a>

          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre Empleado</th>
                <th scope="col">Fecha</th>
                <th scope="col">Salario</th>
                <th scope="col">Nombre Restaurante</th>
                <th scope="col">Estrellas</th>
              </tr>
            </thead>
            <tbody>
                <% results.forEach( results => { %> 
                    <tr>
                        <td><%= results.id %></td>
                        <td><%= results.nombre_persona %></td>
                        <td><%= results.fecha.toLocaleDateString("en-US", { day: 'numeric' }) + "-"+ results.fecha.toLocaleDateString("en-US", { month: 'numeric' }) + "-" + results.fecha.toLocaleDateString("en-US", { year: 'numeric' }) %> </td>
                        <td><%= results.salario %> </td>
                        <td><%= results.nombre_restaurante %></td>
                        <td><%= results.estrellas %> </td>
                        <td>
                            <a href="/edit/<%= results.id %>" class="btn btn-outline-info">Editar</a>
                            <a href="/delete/<%= results.id %>" class="btn btn-outline-danger">Borrar</a>
                        </td>
                    </tr>
                <% }) %> 
            </tbody>
          </table>

      </div>

      

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

   
  </body>
</html>